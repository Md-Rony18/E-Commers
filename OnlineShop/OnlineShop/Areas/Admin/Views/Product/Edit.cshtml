@using OnlineShop.Areas.Admin.Models
@model Product
@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Category Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-action="Edit" asp-area="Admin" asp-controller="Product" method="post" enctype="multipart/form-data">
              <div class="box-body">
                <div class="form-group">
                  <label asp-for="Name" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="CategoryId" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                      <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.categoryId"></select>
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Models" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Models" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Price" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Quantity" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Quantity" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
                 <div class="form-group">
                  <label class="col-sm-2 control-label">Old Images</label>
                  <div class="col-sm-10">
                     <img src="~/@Model.Img" class="img-responsive img-thumbnail" height="250" width="350" />
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Img" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Img" type="file" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Save</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>
</div>

