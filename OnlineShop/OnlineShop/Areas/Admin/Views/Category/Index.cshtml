@using OnlineShop.Areas.Admin.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="box">
<div class="box-header">
    <div class="row">
        <div class="col-md-6">
            <h3 class="box-title">Category List</h3>
        </div>
        <div class="col-md-6 text-right">
             <a class="btn btn-success" asp-action="Create"  asp-area="Admin" asp-controller="Category">
                Create
            </a>
        </div>
    </div>
</div>
<!-- /.box-header -->
<div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Serial Number</th>
        <th>Category Name</th>
        
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
     @foreach (var item in Model)
     {
         <tr>
             <td>@item.Id</td>
             <td>@item.Name</td>
             <td>
                 <a class="btn btn-success" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                 <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
             </td>
         </tr>
     }
    </tbody>
    </table>
</div>
<!-- /.box-body -->
</div>
@section Scripts{
  <!-- DataTables -->
<script src="~/Admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/Admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
  <script>
    $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
  </script>
}
