@using OnlineShop.Areas.Admin.Models
@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-6 mx-auto">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Horizontal Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-action="Edit" asp-area="Admin" asp-controller="Category" method="post">
              <div class="box-body">
                <div class="form-group">
                  <label asp-for="Name" class="col-sm-2 control-label"></label>

                  <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Save</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>
</div>
