@using OnlineShop.Areas.Admin.Models
@model ApplicationUser
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_AuthLayout.cshtml";
}

<p class="login-box-msg">Register a new membership</p>

    <form asp-action="Register" asp-controller="Home" asp-area="Admin" method="post">
      <div class="form-group has-feedback">
        <input asp-for="FirstName" class="form-control" placeholder="First name">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input asp-for="LastName" class="form-control" placeholder="Last name">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input asp-for="UserName" class="form-control" placeholder="Enter Email">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input asp-for="PasswordHash" class="form-control" placeholder="Retype password">
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> I agree to the <a href="#">terms</a>
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
        </div>
        <!-- /.col -->
      </div>
    </form>
    <a asp-action="Login" asp-controller="Home" asp-area="Admin" class="text-center">I already have a membership</a>
