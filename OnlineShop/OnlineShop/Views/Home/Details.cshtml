@model Product
@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-md-6 mx-auto">
          <!-- Horizontal Form -->
          <div class="card">
            <div class="card-header with-border">
              <h3 class="card-title">Details Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-action="Card"  asp-controller="home" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label asp-for="Name" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Name" readonly="readonly" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="CategoryId" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                      <select asp-for="CategoryId" disabled class="form-control" asp-items="ViewBag.categoryId"></select>
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Models" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Models" readonly="readonly" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Price" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Price" readonly="readonly" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Quantity"  class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Quantity" readonly="readonly" class="form-control" id="inputEmail3" placeholder="Category Name">
                  </div>
                </div>
                 <div class="form-group">
                  <label class="col-sm-2 control-label">Old Images</label>
                  <div class="col-sm-10">
                     <img src="~/@Model.Img" class="img-responsive img-thumbnail" height="250" width="350" />
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="card-footer">
                <button asp-action="Index" asp-controller="Home" class="btn btn-default">Cancel</button>
                <button asp-action="Card" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-info text-end">Add To Card</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>
</div>
