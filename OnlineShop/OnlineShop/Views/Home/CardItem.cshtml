@model IEnumerable<Product>
@{
    ViewData["Title"] = "CardItem";
}
<h1>Cart Items</h1>

<div class="row">
    <table class="table table-bordered">
        <thead class="bg-black text-white">
            <tr class="text-center">
                <th>Models</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
             @foreach (var item in Model)
             {
                 <tr class="text-center">
                     <td>@item.Models</td>
                     <td>@item.Name</td>
                     <td>@item.Price</td>
                     <td>
                        <img src="~/@item.Img" class="img-responsive img-thumbnail" height="60" width="60" asp-append-version=true/>                     </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
             }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Home" >Back To Home</a>
    </div>
    <div class="col-md-6 text-end">
        <h2>Total Price:</h2>
        <h3>Sub Total Price:@Model.Sum(p=>p.Price)</h3>
        <a class="btn btn-outline-primary" asp-action="OrderNow" asp-controller="Order" >Process To Order</a>
    </div>
</div>
